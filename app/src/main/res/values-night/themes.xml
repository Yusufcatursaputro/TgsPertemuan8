<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyCourse" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
         <item name="colorPrimary">#525BFF</item>
    </style>
    <!-- Base application theme with ActionBar. -->
    <style name="Base.Theme.MyCourse.WithActionBar"
        parent="Theme.Material3.DayNight">
        <!-- Customize your dark theme here, similar to the theme without ActionBar.
       -->
         <item name="colorPrimary">#525BFF</item>
    </style>

    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#525BFF</item>
        <item name="colorPrimaryVariant">#525BFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>